//- START - Declare default value vars here
block variables
- site_title = 'Mico Manuel'

if(page_title)
  - title=page_title + 'ï½œ' + site_title
//- END - Declare default value vars here

//- --START-- HTML codes begins here //
doctype html
html
  head
    //- --START-- metatags //
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=11")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=yes")
    link(rel="shortcut icon", href="./public/img/logo.png", type="image/x-icon")

    if page_metatags
      each item in page_metatags
        meta(name=item['name'], content=item['content'])
    meta(name="og:type", content="website")
    
    title=title
    //- --END-- metatags //

    //- --START-- Stylesheets CDNs //
    block cdn_css
    //- --START-- Stylesheets CDNs //
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet")
    link(rel="stylesheet" href="https://unpkg.com/aos@2.3.1/dist/aos.css")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/css/splide.min.css")
    
    //- --START-- Global Stylesheets //
    link(rel="stylesheet", href="css/main.css")
    //- --END-- Global Stylesheets //

    //- --START-- Page Specific Stylesheets //
    block customize_css
    //- --END-- Page Specific Stylesheets //

  body
    header
      //- Before the header content
      block before_header
      include header.pug
      //- Include global header based files here
      
      //- After the header content
      block after_header

    main(class=pageTitle)
      //- Before the page content
      block before_content 

      //- Page content will appear here
      block content

      //- After the page content
      block after_content
    
    footer
      //- Before the footer content
      block before_footer
      include footer.pug
      //- Include global footer based files here

      //- After the footer content
      block after_footer
    

    //- --START-- CDN Scripts //
    script(src="https://cdn.rawgit.com/scottjehl/picturefill/3.0.2/dist/picturefill.min.js", defer)
    script(src="https://cdn.jsdelivr.net/npm/smoothscroll-polyfill@0.4.4/dist/smoothscroll.min.js", defer)
    script(src="https://cdn.jsdelivr.net/npm/vanilla-lazyload@17.8.3/dist/lazyload.min.js", defer)
    script(src="https://cdn.jsdelivr.net/npm/@splidejs/splide-extension-auto-scroll@0.5.3/dist/js/splide-extension-auto-scroll.min.js")
    script(src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js")
    script(src="https://unpkg.com/aos@2.3.1/dist/aos.js")
    block cdn_scripts
    //- --END-- Scripts //

    //- --START-- Default scripts
    script(src="js/top/index.js", defer)
    block customize_script
    //- --END-- Default scripts

//- --END-- HTML codes begins here //
